@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Roles</h1>
<hr />
@if(ViewBag.error!=null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}
<table class="table table-bordered table-striped">

    <tr>
        <td>Rol Id</td>
        <td>Rol İsmi</td>
        <td>Rol Silme Butonu</td>
        <td>Rol Güncelleme Butonu</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hiç bir rol yoktur.</td>
        </tr>
    }
    else
    {

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a href="/Admin/Delete/@item.Id" class="btn btn-info mr-1">Rolü Sil</a>
                </td>
                <td>
                    <a asp-action="Update" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-info mr-1">Rolü Güncelle</a>
                </td>
            </tr>
        }

    }
</table>

<a class="btn btn-danger btn-block" asp-action="RoleCreate" asp-controller="Admin">Rol oluştur.</a>

